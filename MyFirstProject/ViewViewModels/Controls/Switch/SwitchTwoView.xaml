<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Controls.Switch.SwitchTwoView"
             Title="{Binding Title}" >
    
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand" >

            <Label Text="Switch Two"
                   x:Name="label"
                   FontSize="Large"
                   TextColor="blue"
                   FontAttributes="Bold" />

            <StackLayout HorizontalOptions="Center" >
                <Switch IsToggled="{Binding SwitchControl}"
                        ThumbColor="CadetBlue"
                        OnColor="CornflowerBlue" />
            </StackLayout>

            <StackLayout HorizontalOptions="Center" >
                <Switch IsToggled="{Binding SwitchControlTwo}"
                        ThumbColor="LightPink"
                        OnColor="LightCoral" />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>