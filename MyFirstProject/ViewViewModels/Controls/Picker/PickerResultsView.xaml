<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Controls.Picker.PickerResultsView"
             Title="{Binding Title}">
    
    <ContentPage.Content>

        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="Center">

            <Label Text="Results From Picker VM"
               FontSize="Large"
               FontAttributes="Bold" />

            <Label x:Name="resultLabel" 
               FontSize="Medium"
               FontAttributes="Bold"/>

            <Image x:Name="resultImage" 
                   Source="{Binding ImageSource}"
                   Aspect="AspectFill"/>

        </StackLayout>
            
    </ContentPage.Content>
</ContentPage>