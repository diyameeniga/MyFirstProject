<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Controls.ControlsView"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            
            <Grid Margin="25, 25, 30, 20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="180" />
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Text="Slider" 
                    BackgroundColor="cadetblue" CornerRadius="7" 
                    Command="{Binding OnSliderClicked}"/>

                <Button Grid.Row="0" Grid.Column="1" Text="Stepper" 
                    BackgroundColor="cadetblue" CornerRadius="7" 
                    Command="{Binding OnStepperClicked}"/>

            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>