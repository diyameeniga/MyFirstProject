<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.List.CollectionImages.MovieCollection.EditMovies.Edit_Movies_View">
    <ContentPage.Content>
        
        <StackLayout Padding="5">

            <Label Text="Movie Title"
                FontAttributes="Bold" 
                TextColor="Black" />

            <Entry Placeholder="Enter Movie Title"
                   FontSize="Small"
                   HorizontalOptions="FillAndExpand"
                   Text="{Binding MovieText}"
                   x:Name="Title" />

            <Button Text="Update"
                    Command="{Binding UpdateClicked}"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="Maroon"
                    TextColor="White"
                    x:Name="saveBtn" />

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>